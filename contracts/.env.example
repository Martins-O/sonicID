# SonicID Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# ================================
# DEPLOYMENT ACCOUNT CONFIGURATION
# ================================

# Private key for deploying contracts (without 0x prefix)
# Generate a new wallet specifically for deployment with minimal funds
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Alternative: Use mnemonic instead of private key
# MNEMONIC="your twelve word mnemonic phrase here"

# Public address of the deploying account
DEPLOYER_ADDRESS=0x0000000000000000000000000000000000000000

# ================================
# NETWORK CONFIGURATION
# ================================

# Sonic Network RPC URLs
SONIC_MAINNET_RPC_URL=https://rpc.sonic.fantom.network/
SONIC_TESTNET_RPC_URL=https://sonic-blaze-rpc.publicnode.com

# Chain IDs (do not change these)
SONIC_MAINNET_CHAIN_ID=146
SONIC_TESTNET_CHAIN_ID=57054

# API Keys for contract verification
SONIC_MAINNET_API_KEY=your_sonic_mainnet_api_key
SONIC_TESTNET_API_KEY=your_sonic_testnet_api_key

# ================================
# GAS CONFIGURATION
# ================================

# Gas prices (in wei) - adjust based on network conditions
SONIC_MAINNET_GAS_PRICE=25000000000
SONIC_TESTNET_GAS_PRICE=20000000000

# Gas limits
DEPLOYMENT_GAS_LIMIT=8000000
TRANSACTION_GAS_LIMIT=500000

# ================================
# OPTIONAL CONFIGURATIONS
# ================================

# Gas reporting
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Contract verification
AUTO_VERIFY_CONTRACTS=true
ETHERSCAN_API_KEY=your_etherscan_api_key

# Development settings
DEPLOYMENT_ENVIRONMENT=development
DEBUG_ENABLED=true
VERBOSE_LOGGING=true

# ================================
# CONTRACT INITIALIZATION
# ================================

# Initial owner addresses for deployed contracts
IDENTITY_REGISTRY_INITIAL_OWNER=0x0000000000000000000000000000000000000000
ZK_VERIFIER_INITIAL_ADMIN=0x0000000000000000000000000000000000000000

# Platform operators (comma-separated addresses)
PLATFORM_OPERATORS=0x0000000000000000000000000000000000000000

# ================================
# SECURITY & MONITORING
# ================================

# Enable security features
ENABLE_CONTRACT_VERIFICATION=true
ENABLE_DEPLOYMENT_CONFIRMATION=true

# Monitoring (optional)
MONITORING_ENABLED=false
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# ================================
# PERFORMANCE SETTINGS
# ================================

# Solidity compiler optimization
SOLIDITY_OPTIMIZER_ENABLED=true
SOLIDITY_OPTIMIZER_RUNS=1000

# Network timeout settings
REQUEST_TIMEOUT=30000
MAX_RETRIES=3

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable platform features
ENABLE_REPUTATION_SYSTEM=true
ENABLE_ZK_VERIFICATION=true
ENABLE_MULTI_ATTRIBUTE_VERIFICATION=true